/*Faça um algoritmo que leia um valor e escreva: 0, se o valor é zero; 
1, e o valor é maior que zero; -1 - se o valor é negativo.*/

#include <stdio.h>

int main() {

float num;

printf("Digite um numero inteiro: ");
scanf("%f", &num);

if (num == 0) {
    printf("0");
}
else if (num > 0) {
    printf("1");
}
else {
    printf("-1");
}
}