/* Faça um algoritmo que leia um valor e escreva: 0, se o valor é par; 1, se o 
valor é ímpar.*/

#include <stdio.h>

int main() {

int valor;

printf("Digite um valor inteiro: ");
scanf("%d", &valor);

if (valor%2 == 0) {
printf("0");

} else if (valor%2 >= 1) {
    printf("1");
}

return 0;

}